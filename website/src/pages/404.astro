---
import "../styles/global.css";
import Button from "@/components/ui/button.astro";
import { ArrowRight } from "@lucide/astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Tracktrip</title>
  </head>
  <body>
    <div
      class="flex flex-col items-center justify-center h-full w-full bg-background"
    >
      <p class="text-7xl font-bold text-foreground">404</p>
      <p class="text-xl text-subtle-foreground">This page can't be found</p>
      <Button class="mt-8" variant="secondary" as="a" href="/">
        Go home
        <ArrowRight class="h-4 w-4" />
      </Button>
    </div>

    <style>
      html,
      body {
        margin: 0;
        width: 100%;
        height: 100%;
      }
    </style>
  </body>
</html>
