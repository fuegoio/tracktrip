---
import Layout from "@/layouts/Layout.astro";

import { BudgetCalculator } from "@/components/react/budget-calculator";
---

<Layout
  title="Trip budget calculator"
  description="With this simple tool, compute how much your trip will cost in seconds."
>
  <main
    class="w-full flex flex-col items-center max-w-[1150px] mx-auto pt-4 gap-12 sm:px-4"
  >
    <section
      class="w-full pt-24 sm:pt-28 p-3 flex flex-col gap-8 pb-8 animate-in fade-in duration-1000 fill-mode-backwards"
    >
      <div class="space-y-4 text-center">
        <h1 class="text-4xl sm:text-6xl font-medium max-w-2xl mx-auto">
          Trip budget calculator
        </h1>
      </div>
      <div class="text-lg text-muted-foreground max-w-xl mx-auto text-center">
        With this simple tool, compute how much your trip will cost in seconds.
      </div>
    </section>

    <section
      class="w-full border rounded-xl shadow-xl py-8 px-4 sm:px-8 bg-card mb-16 max-w-2xl"
    >
      <BudgetCalculator client:load />
    </section>
  </main>
</Layout>
